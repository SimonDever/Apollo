{
  "name": "apollo",
  "productName": "Apollo",
  "description": "Desktop movie organiser",
  "version": "1.0.5",
  "author": "Simon Dever",
  "copyright": "Â© 2021, Simon Dever",
  "private": true,
  "license": "UNLICENSED",
  "main": "app-out/app.js",
  "repository": {
    "url": "https://github.com/simondever/apollo.git"
  },
  "updater": {
    "url": "https://raw.githubusercontent.com/SimonDever/Apollo/master/updates/win32-x64-prod.json"
  },
  "build": {
    "appId": "com.github.simondever.apollo",
    "files": [
      "app-out/**/*",
      "node_modules/**/*",
      "package.json",
      "!updates.json",
      "!publisher.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/images/icons/logo.ico"
    }
  },
  "scripts": {
    "ng": "ng",
    "serve": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint",
    "electron": "electron .",
    "postinstall": "npm config set script-shell 'C:\\Program Files\\git\\bin\\bash.exe'",
    "make-icons": "./node_modules/.bin/icon-gen -i ./src/assets/images/logos/ -o ./src/assets/images/icons/ --ico --ico-name logo --ico-sizes 16,32,48,128,256",
    "copy7zip": "cp -r node_modules/7zip/7zip-lite app",
    "debug-electron": "setx ELECTRON_ENABLE_LOGGING true && electron . --enable-logging",
    "start": "ng build && ./node_modules/electron/dist/electron.exe .",
    "dont-use-packager": "./node_modules/.bin/electron-packager .",
    "package": "rm -rf app-out dist && npm run build && electron-builder",
    "electron-builder": "electron-builder",
    "publish": "./node_modules/.bin/publish"
  },
  "dependencies": {
    "7zip": "0.0.6",
    "@angular/animations": "^9.1.13",
    "@angular/cdk": "^9.2.4",
    "@angular/cdk-experimental": "^9.2.4",
    "@angular/cli": "^9.1.15",
    "@angular/common": "^9.1.13",
    "@angular/compiler": "^9.1.13",
    "@angular/core": "^9.1.13",
    "@angular/forms": "^9.1.13",
    "@angular/localize": "^9.1.13",
    "@angular/platform-browser": "^9.1.13",
    "@angular/platform-browser-dynamic": "^9.1.13",
    "@angular/platform-server": "^9.1.13",
    "@angular/router": "^9.1.13",
    "@ng-bootstrap/ng-bootstrap": "^6.2.0",
    "@ngrx/effects": "^9.2.1",
    "@ngrx/entity": "^9.2.1",
    "@ngrx/router-store": "^9.2.1",
    "@ngrx/store": "^9.2.1",
    "@primer/octicons": "^9.1.1",
    "@tweenjs/tween.js": "^17.4.0",
    "@types/nedb": "^1.8.9",
    "@types/tween.js": "17.2.0",
    "bootstrap": "^4.1.2",
    "bootstrap-switch-button": "^1.1.0",
    "core-js": "^3.2.1",
    "electron-devtools-installer": "^3.1.1",
    "electron-load-devtool": "^1.2.0",
    "electron-log": "^4.2.2",
    "electron-simple-updater": "^2.0.9",
    "jquery": "^3.4.1",
    "nedb": "^1.8.0",
    "ng2-dragula": "^2.1.1",
    "ngrx-store-freeze": "^0.2.4",
    "ngx-electron": "2.2.0",
    "ngx-ui-scroll": "^2.2.0",
    "path": "^0.12.7",
    "popper.js": "^1.15.0",
    "rxjs": "^6.5.3",
    "themoviedb-javascript-library": "^3.0.3",
    "tslib": "^1.10.0",
    "uuid": "^3.3.3",
    "vlc-simple-player": "^0.5.0",
    "zone.js": "~0.10.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.901.15",
    "@angular-devkit/core": "^9.1.15",
    "@angular/compiler-cli": "^9.1.13",
    "@angular/language-service": "^9.1.13",
    "@ngrx/store-devtools": "^9.2.1",
    "@types/jasmine": "^3.4.1",
    "@types/jasminewd2": "^2.0.7",
    "@types/node": "^12.11.1",
    "app-builder-lib": "^21.2.0",
    "codelyzer": "^5.1.2",
    "electron": "^9.0.0",
    "electron-builder": "^22.9.1",
    "electron-builder-squirrel-windows": "^22.10.4",
    "electron-packager": "^14.0.6",
    "electron-simple-publisher": "^2.0.0",
    "get-stdin": "^7.0.0",
    "icon-gen": "^2.1.0",
    "jasmine-core": "^3.5.0",
    "jasmine-spec-reporter": "^4.2.1",
    "karma": "^4.3.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "tslint": "^5.20.0",
    "typescript": "~3.7.7"
  }
}
